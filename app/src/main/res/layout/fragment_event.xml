<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/CustomTextViewStyle"
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="Event"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/my_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_header">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchEventsSV"
            android:queryBackground="@color/colorPrimaryDark"
            android:hint="Search events by name"
            android:textColorHint="@color/black"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="95dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            style="@style/CustomButtonStyle"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/ic_filter"
            android:drawableStart="@drawable/ic_filter"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/category_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/search_row"
        tools:layout_editor_absoluteX="-86dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                style="@style/CustomButtonStyle"
                android:id="@+id/filterAllBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textOn="All"
                android:textOff="All"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="13dp"/>

            <ToggleButton
                style="@style/CustomButtonStyle"
                android:id="@+id/filterDiningBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dining"
                android:textOn="Dining"
                android:textOff="Dining"
                android:layout_marginEnd="8dp"/>

            <ToggleButton
                style="@style/CustomButtonStyle"
                android:id="@+id/filterStudyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study"
                android:textOn="Study"
                android:textOff="Study"
                android:layout_marginEnd="8dp"/>

            <ToggleButton
                style="@style/CustomButtonStyle"
                android:id="@+id/filterMeetingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting"
                android:textOn="Meeting"
                android:textOff="Meeting"
                android:layout_marginEnd="8dp"/>

            <ToggleButton
                style="@style/CustomButtonStyle"
                android:id="@+id/filterTravelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel"
                android:textOn="Travel"
                android:textOff="Travel"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upcoming_seeall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/category_scroll">

        <TextView
            style="@style/CustomTextViewStyle"
            android:id="@+id/upcoming_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="Upcoming Event"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/CustomTextViewStyle"
            android:id="@+id/see_all"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:text="see all"

            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsListRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upcoming_seeall"
        app:layout_constraintHeight_max="900dp"/>

    <Button
        style="@style/CustomButtonStyle"
        android:id="@+id/addEventBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Add Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
