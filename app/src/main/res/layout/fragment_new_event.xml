<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Event"/>

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/event_img_test"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/event_image"
        app:layout_constraintTop_toTopOf="@id/event_image">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_img"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_edit"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/calendar_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent">



        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calendar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:background="@drawable/rounded_edittext"
                android:text="       Your Event Name       "
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:textSize="12dp"
                android:layout_marginTop="0dp"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:background="@drawable/rounded_edittext"
                android:text="Write A Short Description For The Event"
                android:textSize="12dp"
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/calendar_row">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TIME"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:text="Start Time"
                android:textSize="12dp"
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:layout_margin="3dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:text="End Time"
                android:textSize="12dp"
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:layout_margin="3dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:text="Duration"
                android:textSize="12dp"
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:layout_margin="3dp"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/address_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/time_row"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/rounded_edittext"
                android:text="Address Line 1"
                android:textSize="12dp"
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/rounded_edittext"
                android:text="Address Line 2"
                android:textSize="12dp"
                android:textColor="#b4b2b2"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_type_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/address_row"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENT TYPE"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>