<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_profile"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profile_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_title"
        app:layout_constraintBottom_toTopOf="@id/profile_about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="@dimen/nav_header_image_size"
            android:layout_height="@dimen/nav_header_image_size"
            android:layout_margin="@dimen/general_small_margin"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/displayNameTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/displayNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_small_margin"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toTopOf="@id/phoneNumberTV"
            app:layout_constraintStart_toEndOf="@id/profileIV"
            app:layout_constraintTop_toTopOf="@id/profileIV"
            tools:text="@string/nav_header_title" />

        <ImageView
            android:id="@+id/profile_edit_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/general_small_margin"
            android:padding="2dp"
            android:background="@drawable/rounded_btn"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@id/profileIV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileIV" />

        <TextView
            android:id="@+id/phoneNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_small_margin"
            app:layout_constraintStart_toEndOf="@+id/profileIV"
            app:layout_constraintTop_toBottomOf="@id/displayNameTV"
            tools:text="@string/nav_header_subtitle" />
        <TextView
            android:id="@+id/addressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_small_margin"
            app:layout_constraintStart_toEndOf="@+id/profileIV"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberTV"
            tools:text="777 Commonwealth Ave" />
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_small_margin"
            app:layout_constraintStart_toEndOf="@+id/profileIV"
            app:layout_constraintTop_toBottomOf="@id/addressTV"
            tools:text="@string/nav_header_subtitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_about"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@id/profile_detail"
        app:layout_constraintBottom_toTopOf="@id/badge_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/profile_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/aboutMeTV"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/aboutMeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="30dp"
            android:text="@string/lorem"
            app:layout_constraintTop_toBottomOf="@id/profile_about_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_edit_about"/>
        <ImageView
            android:id="@+id/profile_edit_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/general_small_margin"
            android:background="@drawable/rounded_btn"
            android:padding="2dp"

            app:layout_constraintTop_toTopOf="@id/profile_about_title"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Badges"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_about"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/badge_img"
        android:layout_width="@dimen/nav_header_image_size"
        android:layout_height="@dimen/nav_header_image_size"
        android:layout_margin="@dimen/general_small_margin"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="180dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintTop_toBottomOf="@id/badge_title"
        tools:srcCompat="@drawable/ic_badge_1" />

    <TextView
        android:id="@+id/badge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_small_margin"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@id/badge_content"
        app:layout_constraintStart_toEndOf="@id/badge_img"
        app:layout_constraintTop_toTopOf="@id/badge_img"
        tools:text="Always Late" />


    <TextView
        android:id="@+id/badge_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/general_small_margin"
        app:layout_constraintStart_toEndOf="@+id/badge_img"
        app:layout_constraintTop_toBottomOf="@id/badge_name"
        android:textColor="@color/colorPrimary"
        tools:text="be LATE for 10+ times to earn this" />
</androidx.constraintlayout.widget.ConstraintLayout>