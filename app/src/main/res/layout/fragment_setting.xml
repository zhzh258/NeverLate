<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/rectangle_shape"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-15dp"/>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_shape"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_shape"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rectangle_shape"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_menu_profile"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/displayNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZhaoZhan"
            android:textSize="20sp"
            android:layout_marginTop="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider_one"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <LinearLayout
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Edit Profile"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_edit_profile"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_vector"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/push_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Push Notification"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <Switch
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/divider_two"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/General"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="About Us"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_vector"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/private_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Private Policy"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_vector"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Dark Mode"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <Switch
                android:id="@+id/dark_mode_switch"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Rate Us"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_rate_us"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_vector"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>