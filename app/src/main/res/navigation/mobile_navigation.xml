<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.snowman.neverlate.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.snowman.neverlate.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.snowman.neverlate.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_friends"
        android:name="com.snowman.neverlate.ui.friends.FriendsFragment"
        android:label="@string/menu_friends"
        tools:layout="@layout/fragment_friends"
        />

    <fragment
        android:id="@+id/addFriendsFragment"
        android:name="com.snowman.neverlate.ui.friends.AddFriendsFragment"
        android:label="@string/add_friends"
        tools:layout="@layout/fragment_add_friends" />

    <action
        android:id="@+id/action_friendsFragment_to_addFriendsFragment"
        app:destination="@id/addFriendsFragment" />
</navigation>