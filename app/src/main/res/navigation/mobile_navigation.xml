<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.snowman.neverlate.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.snowman.neverlate.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.snowman.neverlate.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_friends"
        android:name="com.snowman.neverlate.ui.friends.FriendsFragment"
        android:label="@string/menu_friends"
        tools:layout="@layout/fragment_friends"
        />
    <fragment
        android:id="@+id/addFriendsFragment"
        android:name="com.snowman.neverlate.ui.friends.AddFriendsFragment"
        android:label="@string/add_friends"
        tools:layout="@layout/fragment_add_friends" />

    <action
        android:id="@+id/action_friendsFragment_to_addFriendsFragment"
        app:destination="@id/addFriendsFragment" />
  
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.snowman.neverlate.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile_v2"/>
  
    <fragment
        android:id="@+id/nav_map"
        android:name="com.snowman.neverlate.ui.map.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map"/>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.snowman.neverlate.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_setting"/>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.snowman.neverlate.ui.settings.EditProfileFragment"
        android:label="@string/edit_profile"
        tools:layout="@layout/fragment_edit_profile" />

    <action
        android:id="@+id/settingsFragment_to_editProfileFragment"
        app:destination="@id/editProfileFragment" />

    <fragment
        android:id="@+id/rateUsFragment"
        android:name="com.snowman.neverlate.ui.settings.RateUsFragment"
        android:label="@string/rate_us"
        tools:layout="@layout/fragment_rateus" />

    <action
        android:id="@+id/settingsFragment_to_rateUsFragment"
        app:destination="@id/rateUsFragment" />
  
</navigation>